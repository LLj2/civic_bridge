# Civic Bridge Environment Variables
# Copy this file to .env and update values for your environment

# Database Configuration
DATABASE_URL=postgresql://civic_bridge_user:your_password_here@localhost:5432/civic_bridge
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=production

# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-randomly-generated-secret-key

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Monitoring (optional)
PROMETHEUS_METRICS=true

# Email Configuration (for OAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_REDIRECT_URI=http://localhost:5000/auth/google/callback

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/civic_bridge.log

# Development settings (set to false in production)
DEBUG=false
DEVELOPMENT=false